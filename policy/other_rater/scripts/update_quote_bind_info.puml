@startuml
actor User
participant "update_quote_bind_info (API View)" as View
participant "udf_is_quote_bound_available_db" as IsBindAvailable
participant "update_quote_bind_info_db" as UpdateBindInfo
participant "update_quote_status_bind_info" as UpdateStatus

User -> View: POST /update_quote_bind_info
View -> View: Parse request.body (JSON)
View -> IsBindAvailable: udf_is_quote_bound_available_db(quote_id)
IsBindAvailable --> View: bind availability
alt Binding not available
    View: Build error message
    View --> User: Response (status=False, result=msg)
else Binding available
    View -> UpdateBindInfo: update_quote_bind_info_db(policy_number, ..., lapes_information)
    UpdateBindInfo --> View: quote_info_id
    alt update_status is True
        View -> UpdateStatus: update_quote_status_bind_info(quote_id, 9)
    end
    View: Build result dict
    View --> User: Response (quote_info_id)
end
@enduml