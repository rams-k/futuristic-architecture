@startuml
actor Client
participant "endorsementviews.void_endorsement" as View
participant "ExternalAPIHelper._void_endorsement" as VoidEnd
participant "rest_framework.Response" as Response

Client -> View: POST /void_endorsement
View -> View: helper = ExternalAPIHelper()
View -> VoidEnd: helper._void_endorsement(request, request.data)
VoidEnd --> View: res
alt res.get("status") == 1
    View -> Response: Response(res, status=200)
    Response --> Client: JSON response (200)
else
    View -> Response: Response(res, status=400)
    Response --> Client: JSON response (400)
end
@enduml